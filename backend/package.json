{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend BusyKin avec API REST et administration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "dev-windows": "set NODE_ENV=development&& nodemon server.js",
    "prod-windows": "set NODE_ENV=production&& node server.js",
    
    "db:reset": "NODE_ENV=development node -e \"require('./src/config/database').connectDB()\"",
    "db:reset-prod": "NODE_ENV=production node -e \"require('./src/config/database').connectDB()\"",
    "db:create-admin": "node -e \"require('./src/config/database').creerAdminParDefaut()\"",
    
    "db:backup": "cp ./database/busykin.sqlite ./database/backup/busykin-$(date +%Y%m%d-%H%M%S).sqlite",
    "db:seed": "node scripts/seed.js",
    
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": ["api", "rest", "busykin", "marketplace", "admin"],
  "author": "TonNom",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "mysql2": "^3.15.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}